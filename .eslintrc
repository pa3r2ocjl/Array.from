{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"multiline-comment-style": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"Call",
				"CreateDataPropertyOrThrow",
				"Get",
				"IsArray",
				"IsCallable",
				"IsConstructor",
				"ToLength",
				"ToObject",
				"ToString",
			],
		}],
		"no-magic-numbers": 0,
		"quote-props": [2, "always", { "keywords": true }],
		"id-length": [2, { "max": 25, "min": 1 }],
	},

	"ignorePatterns": ["coverage"],

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-lines-per-function": 0,
			},
		},
	],
}
